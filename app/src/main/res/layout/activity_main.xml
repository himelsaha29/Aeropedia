<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundonedark"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:columnCount="1"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/airbusCard"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardPreventCornerOverlap="false"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/airbus_cover"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="132dp"
                        android:fontFamily="@font/maven_pro_medium"
                        android:text="@string/airbus"
                        android:textColor="@color/white"
                        android:textSize="38dp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/boeingCard"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardPreventCornerOverlap="false"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/boeing_cover"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="132dp"
                        android:fontFamily="@font/maven_pro_medium"
                        android:text="@string/boeing"
                        android:textColor="@color/white"
                        android:textSize="38dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bombardierCard"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardPreventCornerOverlap="false"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bombardier_cover"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="132dp"
                        android:fontFamily="@font/maven_pro_medium"
                        android:text="@string/bombardier"
                        android:textColor="@color/white"
                        android:textSize="38dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/embraerCard"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/embraer_cover"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="132dp"
                        android:fontFamily="@font/maven_pro_medium"
                        android:text="@string/embraer"
                        android:textColor="@color/white"
                        android:textSize="38dp" />



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/antonovCard"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardPreventCornerOverlap="false"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/antonov_cover"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="132dp"
                        android:fontFamily="@font/maven_pro_medium"
                        android:text="@string/antonov"
                        android:textColor="@color/white"
                        android:textSize="38dp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cessnaCard"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="#72A8E1"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_launcher_foreground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="-115dp"
                        android:textSize="38dp"
                        android:fontFamily="@font/maven_pro_medium"
                        android:text="@string/cessna" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gulfstreamCard"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="#72A8E1"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_launcher_foreground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/maven_pro_medium"
                        android:layout_marginLeft="-80dp"
                        android:textSize="38dp"
                        android:text="@string/gulfstream" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>